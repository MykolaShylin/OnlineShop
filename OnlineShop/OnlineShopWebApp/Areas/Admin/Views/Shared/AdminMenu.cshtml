<div class="col-2 border-right border-primary">
    @if(User.IsInRole(Constants.ModeratorRoleName))
    {
        <a asp-controller="Order" asp-action="closedorders" asp-area="Admin">Заказы</a>
        <br />
        <a asp-controller="Discount" asp-action="DiscountProducts" asp-area="Admin">Настройка скидок</a>
        <br />
        <a asp-controller="User" asp-action="users" asp-area="Admin">Пользователи</a>
    }
    else if (User.IsInRole(Constants.AdminRoleName))
    {
        <a asp-controller="Order" asp-action="closedorders" asp-area="Admin">Заказы</a>

        <br />
        <a asp-controller="Product" asp-action="ProductsInStock" asp-area="Admin">Продукты на складе</a>

        <br />
        <a asp-controller="Discount" asp-action="DiscountProducts" asp-area="Admin">Настройка скидок</a>

        <br />
        <a asp-controller="Role" asp-action="roles" asp-area="Admin">Роли</a>

        <br />
        <a asp-controller="User" asp-action="users" asp-area="Admin">Пользователи</a>
    }
</div>
