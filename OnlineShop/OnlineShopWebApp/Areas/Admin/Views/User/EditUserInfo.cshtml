@model EditUserViewModel
<div class="row">
    @await Html.PartialAsync("AdminMenu")
    <div class="col-10">
        <form method="post">
            <div class="card alert-light">
                <div class="card-header">
                    <h3>Пользователь @Model.Login</h3>
                </div>
                <div class="card-body">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <input asp-for="ConcurrencyStamp" value="@Model.ConcurrencyStamp" hidden="hidden" />
                    <table class="table table-hover">
                        <tr>
                            <td style="vertical-align:middle">
                                <h6>Личный номер</h6>
                            </td>
                            <td>
                                <input asp-for="Id" value="@Model.Id" readonly="readonly" class="form-control border-0 bg-transparent" />
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align:middle">
                                <h6>Логин</h6>
                            </td>
                            <td>
                                <input asp-for="Login" value="@Model.Login" readonly="readonly" class="form-control border-0 bg-transparent" />
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align:middle">
                                <h6>Имя</h6>
                            </td>
                            <td>
                                <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Введите имя пользователя" />
                            </td>
                            <td style="vertical-align:middle">
                                <span asp-validation-for="Name" style="color:red"></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align:middle">
                                <h6>Фамилия</h6>
                            </td>
                            <td>
                                <input asp-for="SerName" value="@Model.SerName" class="form-control" placeholder="Введите фамилию пользователя" />
                            </td>
                            <td style="vertical-align:middle">
                                <span asp-validation-for="SerName" style="color:red"></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align:middle">
                                <h6>Никнейм</h6>
                            </td>
                            <td>
                                <input asp-for="NikName" value="@Model.NikName" class="form-control" placeholder="Введите никнейм пользователя" />
                            </td>
                            <td style="vertical-align:middle">
                                <span asp-validation-for="NikName" style="color:red"></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align:middle">
                                <h6>Email</h6>
                            </td>
                            <td>
                                <input asp-for="Email" value="@Model.Email" class="form-control" placeholder="Введите почту" />
                            </td>
                            <td style="vertical-align:middle">
                                <span asp-validation-for="Email" style="color:red"></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align:middle">
                                <h6>Телефон</h6>
                            </td>
                            <td>
                                <input asp-for="Phone" value="@Model.Phone" class="form-control" placeholder="Введите телефон" />
                            </td>
                            <td style="vertical-align:middle">
                                <span asp-validation-for="Phone" style="color:red"></span>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="card-footer" style="text-align:right">
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-success btn-block" type="submit" asp-area="Admin" asp-controller="User" asp-action="EditUserInfo">Сохранить</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
