@model ChangePersonalPassword
<div class="row">
    @await Html.PartialAsync("CustomerInfoMenu")
    <div class="col-9 text-center">
        <div class="row justify-content-start flex-column">
            <div class="col-5 mb-3">
                <h3>Смена пароля</h3>
            </div>
            <div class="col-5">
                <form method="post">
                    <input type="hidden" asp-for="Id" /><br />
                    <input asp-for="OldPassword" class="form-control mb-2" placeholder="Введите старый пароль" />
                    <span asp-validation-for="OldPassword" style="color:red"></span>
                    <input asp-for="NewPassword" class="form-control mb-2" placeholder="Введите новый пароль" />
                    <span asp-validation-for="NewPassword" style="color:red"></span>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" />
                    <span asp-validation-for="ConfirmPassword" style="color:red"></span>

                    <button style="margin-top:25px" class="btn btn-success" type="submit" asp-area="User" asp-controller="Customer" asp-action="ChangePassword">Изменить</button>
                </form>
            </div>
        </div>
    </div>
</div>
