<div class="row">
    <div class="col-12">
        <div id="productSlides" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < 3; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#productSlides" data-slide-to="i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#productSlides" data-slide-to="i"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <a asp-area="" asp-controller="Product" asp-action="BrandProducts" asp-route-brand="@ProductBrands.Optimum_Nutrition"><img class="d-block w-100" src="~/banners/Optimum-Nutrition-Gold-Standard-Whey-banner.jpg" alt="слайд"></a>
                </div>
                <div class="carousel-item">
                    <a asp-area="" asp-controller="Product" asp-action="CategoryProducts" asp-route-isAllListProducts="false" asp-route-category="@ProductCategories.Sport_ProteinBar"><img class="d-block w-100" src="~/banners/Protein-Bars-baner.jpg" alt="слайд"></a>
                </div>
                <div class="carousel-item">
                    <a asp-area="" asp-controller="Product" asp-action="CategoryProducts" asp-route-category="@ProductCategories.Sport_BCAA"><img class="d-block w-100" src="~/banners/BCAAS.jpg" alt="слайд"></a>
                </div>
            </div>
            <a class="carousel-control-prev" href="#productSlides" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#productSlides" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>


