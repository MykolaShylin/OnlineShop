@model LogInViewModel

<form method="post" style="text-align:center">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="text-danger" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
            <div class="row justify-content-center sign-in-up-form">
                <div class="col-12 p-3">
                    <h3>Авторизация</h3>
                </div>
                <div class="col-2">
                    <img src="/icons/user_icon.png" />
                </div>
                <div class="col-10 align-self-center">
                    <input asp-for=NameLogin class="form-control" placeholder="Введите ваш логин">
                </div>
                <div class="col-2 pt-3">
                    <img src="~/icons/password_icon.png" />
                </div>
                <div class="col-10 align-self-center pt-3">
                    <input asp-for=Password type="password" class="form-control" placeholder="Введите ваш пароль">
                </div>

                <div class="col-auto pt-3">
                    <div class="form-group m-0">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="isremember" value="true"> Запомнить меня?
                            </label>
                        </div>
                    </div>
                </div>  
                <div class="col-12 p-4">
                    <button class="btn btn-dark btn-block" type="submit" asp-controller="UserEntering" asp-action="Login">Войти</button>
                </div>                
                <div class="col-12 p-2 justify-content-around" style="display:flex">
                    <a class="font-weight-lighter link-danger" asp-controller="UserEntering" asp-action="ForgotPassword">Забыли пароль?</a>
                    <a class="font-weight-lighter link-success" asp-controller="UserRegistration" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Еще нет аккаунта?</a>
                </div>
                <div class="col-12 p-2">
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" asp-controller="UserEntering" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary w-50 m-2" name="provider" value="@provider.Name">@provider.DisplayName</button>
                    }
                </div>
            </div>
        </div>
    </div>
</form>
