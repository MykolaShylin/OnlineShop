@model LogInViewModel

<form method="post" style="text-align:center">
    <div class="row justify-content-center">
        <div class="col-5">
            <div class="offset-2">
                <h3>Авторизация</h3>
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
            <div class="row text-center">
                <div class="col-2">
                    <img src="/icons/user_icon.png" />
                </div>
                <div class="col-10 align-self-center">
                    <input input asp-for=NameLogin class="form-control" placeholder="Введите ваш логин">
                </div>
                <div class="col-2 pt-3">
                    <img src="~/icons/password_icon.png" />
                </div>
                <div class="col-10 align-self-center pt-3">
                    <input asp-for=Password type="password" class="form-control" placeholder="Введите ваш пароль">
                </div>
            </div>
            <div class="offset-2">
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="isremember" value="true"> Запомнить меня?
                        </label>
                    </div>
                </div>
                <button class="btn btn-dark w-50" style="margin-bottom:10px" type="submit" asp-controller="UserEntering" asp-action="Login">Войти</button><br />
                <div>
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" asp-controller="UserEntering" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary w-50" style="margin-bottom:10px" name="provider" value="@provider.Name">@provider.DisplayName</button>
                    }
                </div>
                <a asp-controller="UserRegistration" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" style="font-weight:200; color:crimson">Еще нет аккаунта?</a>
            </div>
        </div>
    </div>
</form>
