@model AddFeedbackModel


<div class="modal" id="addFeedbackModal">
    <form role="form" method="post">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Ваш отзыв</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <div class="form-group form-inline">
                        <label for="name" class="col-2">Имя</label>
                        <div class="col-10">
                            <input asp-for="UserName" class="form-control w-100" id="name" placeholder="Ваше имя">
                        </div>
                        <div class="col-12">
                            <span asp-validation-for="UserName" style="color:red"></span>
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <label for="grade" class="col-2 control-label">Оценка</label>
                        <div class="rating-area col-10">
                            <input type="radio" id="star-5" asp-for="Grade" value="5">
                            <label for="star-5" title="Оценка «5»"></label>
                            <input type="radio" id="star-4" asp-for="Grade" value="4">
                            <label for="star-4" title="Оценка «4»"></label>
                            <input type="radio" id="star-3" asp-for="Grade" value="3">
                            <label for="star-3" title="Оценка «3»"></label>
                            <input type="radio" id="star-2" asp-for="Grade" value="2">
                            <label for="star-2" title="Оценка «2»"></label>
                            <input type="radio" id="star-1" asp-for="Grade" value="1">
                            <label for="star-1" title="Оценка «1»"></label>
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <label for="feedback" class="col-2">Отзыв</label>
                        <div class="col-10">
                            <textarea asp-for="Text" class="form-control w-100" id="feedback" placeholder="Оставьте отзыв"></textarea>
                        </div>
                        <div class="col-12">
                            <span asp-validation-for="Text" style="color:red"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input hidden="hidden" asp-for="Login" value="@Model.Login" />
                    <input hidden="hidden" asp-for="ProductId" value="@Model.ProductId" />
                    <button class="btn btn btn-success" type="submit" asp-area="" asp-controller="Product" asp-action="AddFeedback">Отправить</button>
                </div>
            </div>            
        </div>
    </form>
</div>
