@model List<MainPageProductsViewModel>


<div class="row no-gutters">
    @foreach (var product in Model)
    {        
        <div class="col-3 p-1">
            <div class="card h-100 shadow-lg border-secondary">
                <div class="card-header bg-white" style="border:none;">
                    <a asp-area="" asp-controller="Product" asp-action="index" asp-route-prodId="@product.Id"><img class="card-img-top" src="@product.Picture.Path"></a>
                </div>
                <div class="card-body">
                    <a style="color:dimgray; float:left" asp-area="" asp-controller="product" asp-action="index" asp-route-prodId="@product.Id">
                        <h5 class="card-subtitle">@product.Name</h5>
                    </a>
                </div>
                <div class="card-footer bg-light" style="border:none">
                    @if(product.AmountInStock > 0)
                    {
                        if (product.Cost == product.DiscountCost)
                        {
                            <h4 style="float:left; color:chartreuse">₴@product.Cost</h4>

                            <br>
                        }
                        else
                        {
                            <h4 style="float:left; color:chartreuse;">₴@product.DiscountCost</h4>
                            <h5 style="float:left; color:dimgrey; text-decoration-line:line-through; text-decoration-color:red">₴@product.Cost</h5>
                        }
                        <a class="btn btn-dark" asp-area="" asp-controller="Basket" asp-action="Buying" asp-route-prodId="@product.Id" asp-route-flavorId="@product.Flavor.Id" asp-route-amount="1" role="button">Добавить в корзину</a>
                    }
                    else
                    {
                        <h4 style="color:goldenrod">Нет в наличии</h4>
                        <a class="btn btn-dark disabled"  asp-area="" asp-controller="Basket" asp-action="Buying" asp-route-prodId="@product.Id" asp-route-flavorId="@product.Flavor.Id" asp-route-amount="1" role="button">Добавить в корзину</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
