
@model List<ProductViewModel>


<div class="row no-gutters">
    @foreach (var product in Model)
    {        
        <div class="col-3">
            <div class="card h-100 shadow-lg border-secondary">
                <div class="card-header bg-white" style="border:none;">
                    <a asp-area="" asp-controller="Product" asp-action="index" asp-route-prodId="@product.Id"><img class="card-img-top" src="@product.Pictures.First().Path"></a>
                </div>
                <div class="card-body pb-0 pt-0">
                    <a style="color:red; float:left" asp-area="" asp-controller="product" asp-action="index" asp-route-prodId="@product.Id">
                        <h5>@product.Name</h5>
                    </a>
                </div>
                <div class="card-footer bg-white pt-0" style="border:none">
                    <h5 style="float:left; color:chartreuse">@product.Cost грн</h5><br>
                    <a class="btn btn-dark" asp-area="" asp-controller="Basket" asp-action="Buying" asp-route-prodId="@product.Id" asp-route-flavorId="@product.Flavors.First().Id" asp-route-amount="1" role="button">Добавить в корзину</a>
                </div>
            </div>
        </div>
    }
</div>
