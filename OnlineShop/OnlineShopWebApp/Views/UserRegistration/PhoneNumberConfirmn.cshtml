@model PhoneConfirmnViewModel
@{
    ViewData["Title"] = "Подтверждение номера телефона";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-6">
        <form method="post">
            <p>
                Мы отправили код подтверждения на номер @Model.PhoneNumber.
                Введи код ниже для подтверждения номера телефона.
            </p>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ConfirmCode">Код</label>
                <input asp-for="ConfirmCode" class="form-control" type="number" />
                <span asp-validation-for="ConfirmCode" class="text-danger"></span>
            </div>
            <input hidden="hidden" asp-for="UserId" value="@Model.UserId" />
            <input hidden="hidden" asp-for="PhoneNumber" value="@Model.PhoneNumber" />
            <input hidden="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
            <button type="submit" asp-area="" asp-action="PhoneNumberConfirmn" asp-controller="UserRegistration" class="btn btn-primary">Подтвердить</button>
        </form>
    </div>
</div>
